REDIS_URL=redis://<username>:<password>@<host>:<port>
REDIS_TLS=true/false

# Maximum secret size in bytes
# Default: 1048576 (1MB)
# Adjust based on your infrastructure capacity and security requirements
MAX_SECRET_SIZE_BYTES=1048576

# Show legal pages (About, FAQ, Privacy, Terms) in navigation
# Set to 'true' to enable legal pages for public deployments
# Default: false (hidden for self-hosted instances)
SHOW_LEGAL_PAGES=false

# Contact email addresses
# Override these for self-hosted instances
SUPPORT_EMAIL=
PRIVACY_EMAIL=
LEGAL_EMAIL=
